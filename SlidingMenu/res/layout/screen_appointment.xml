<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"   
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <LinearLayout  
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:background="@drawable/background_4"
       android:orientation="vertical">
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:background="@drawable/background_4">
            
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="400dp"
                android:src="@drawable/doc_make_appointment"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:contentDescription="Vision Medicare" />
        
        <Button 
            android:layout_width="fill_parent"
		    android:layout_height="38dp"
		    android:layout_gravity="center_horizontal"
		    android:layout_marginTop="16dp"
		    android:text="Fill Mention Details"
		    android:textColor="#fff"
		    android:textSize="13dp"
	        android:background="#eb543b"
	        android:clickable="false"/>
        
        
        <EditText 
            android:id="@+id/appo_et_username"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:hint="Enter Patient Name"
            android:background="#f3f3f3"
            android:paddingLeft="5dp"
            />
        
        
             
        <Button 
            android:layout_width="fill_parent"
		    android:layout_height="38dp"
		    android:layout_gravity="center_horizontal"
		    android:layout_marginTop="16dp"
		    android:text="Choose A Best Doctor For You"
		    android:textColor="#fff"
		    android:textSize="13dp"
	        android:background="#eb543b"
	        android:clickable="false"/>
        
        
        
        <Spinner
            android:id="@+id/appo_doc_name" 
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#f3f3f3"
            android:paddingLeft="5dp"
            android:layout_marginTop="10dp"
            android:entries="@array/doc_name_arrays"
        	android:prompt="@string/doc_name_prompt"/>
    	
        <Button 
            android:layout_width="fill_parent"
		    android:layout_height="38dp"
		    android:layout_gravity="center_horizontal"
		    android:layout_marginTop="16dp"
		    android:text="Tell Us Your Arrival Details"
		    android:textColor="#fff"
		    android:textSize="13dp"
	        android:background="#eb543b"
	        android:clickable="false"/>
        
        <EditText 
            android:id="@+id/appo_et_date"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:hint="Enter Your preferable Date"
            android:background="#f3f3f3"
            android:paddingLeft="5dp"
            android:layout_marginTop="0dp"
            />
        
        <EditText 
            android:id="@+id/appo_et_time_from"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:hint="Type Estimated Time From"
            android:background="#f3f3f3"
            android:paddingLeft="5dp"
            android:layout_marginTop="0dp"
            />
        
        <EditText 
            android:id="@+id/appo_et_time_to"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:hint="Type Estimated Time To"
            android:background="#f3f3f3"
            android:paddingLeft="5dp"
            android:layout_marginTop="0dp"
            />
                
        
        <Button 
            android:id="@+id/appo_btn_book_my_appointment"
            android:layout_width="190dp"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Book My Appointment"
            android:textColor="#fff"
            android:background="@drawable/btn"/>
            
    	</LinearLayout>
        
    	<LinearLayout android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
        	android:orientation="vertical">
    	</LinearLayout>
             
    
	</LinearLayout>
        
</ScrollView>