<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="220dp"
            android:text="Contact Us"
            android:textColor="@color/whites"
            android:textSize="52sp"
            android:gravity="center"
            android:alpha="1"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_form_rounded"
            android:layout_marginTop="-200dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/contact_firstname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:hint="First Name"
                android:includeFontPadding="true"
                android:inputType="textPersonName"
                android:padding="7dp" 
                android:singleLine="true"/>

            <EditText
                android:id="@+id/contact_lastname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:hint="Last Name - Family Name"
                android:includeFontPadding="true"
                android:inputType="textPersonName"
                android:padding="7dp" />
            
            <EditText
                android:id="@+id/contact_contactno"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginBottom="10dp"
                android:hint="Mobile Number"
                android:includeFontPadding="true"
                android:inputType="phone"
                android:padding="7dp" />
            
            <EditText
                android:id="@+id/contact_emailid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:hint="Email ID"
                android:includeFontPadding="true"
                android:inputType="textEmailAddress"           
                android:padding="7dp" />
            
            <EditText
                android:id="@+id/contact_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:hint="Tell Us Your Description"
                android:includeFontPadding="true"
                android:inputType="textMultiLine"           
                android:padding="7dp" />
        </LinearLayout>

        <Button
            android:id="@+id/contact_send_my_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_button_rounded"
            android:text="Send My Question" 
            android:textColor="@color/whites"/>
    </LinearLayout>
    
    <TextView 
        android:id="@+id/link_to_create_account"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Your Questions and Queries are really important to us. We will surely hear you. One of our executive will contact you soon. Thanks for believing in 'Vision Medicare'"
        android:textSize="8dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:textColor="@color/whites"/>

</RelativeLayout>