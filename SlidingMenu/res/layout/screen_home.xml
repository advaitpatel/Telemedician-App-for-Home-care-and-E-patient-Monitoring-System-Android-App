<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:ads="http://schemas.android.com/apk/res-auto" 
	xmlns:myapp="http://schemas.android.com/apk/res/info.androidhive.slidingmenu"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="311dp"
        android:background="@drawable/bg_gradient" 
        android:orientation="vertical" >
        
        <com.google.android.gms.ads.AdView
	        android:id="@+id/adView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        ads:adSize="BANNER"
	        myapp:backgroundColor="#000000" 
			myapp:primaryTextColor="#FFFFFF" 
			myapp:secondaryTextColor="#CCCCCC"
	        ads:adUnitId="ca-app-pub-8482190490613592/4323793061" />
<!-- #faa519 -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="500dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="3.14"
            android:background="@drawable/bg_gradient"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="386dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="00dp"
                android:contentDescription="Vision Medicare"
                android:src="@drawable/home_user" />
			
            <Button 
                android:id="@+id/btn_draw_chart"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Click Here To know your Analysis"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp"
                />
            
        </LinearLayout>

        <LinearLayout
            style="@style/FooterBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_gradient" >
            
            <TextView 
                android:text="www.visionmedicare.com"
	    		android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:textColor="@color/whites"
		    	android:gravity="center"
	    		android:paddingTop="0dip"/>
            
        </LinearLayout>
        <com.google.android.gms.ads.AdView
	        android:id="@+id/adView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        ads:adSize="BANNER"
	        
	        ads:adUnitId="ca-app-pub-8482190490613592/4323793061" />
    </LinearLayout>
        
</ScrollView>